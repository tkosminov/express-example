{
  "name": "express_example",
  "version": "1.0.0",
  "description": "express_example",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start:build": "NODE_ENV=development node dist/main.js",
    "start:beta": "NODE_ENV=beta node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint-fix": "npm run lint -- --fix",
    "db:seed": "npm run build && node dist/database/seeds/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "Timur Kosminov",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.14.0",
    "config": "^3.3.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.7",
    "mongoose-unique-array": "^0.3.4",
    "rimraf": "^3.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/config": "0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^13.9.8",
    "@types/winston": "^2.4.4",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.0",
    "tslint-clean-code": "^0.2.10",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  }
}
